<MainScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    Label:
        text: 'CICADA MASTER'
        font_name: 'HemiHead-BoldItalic'
        font_size: (self.parent.width*0.06+self.parent.height*0.15)/2
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {'center_x':0.525, 'center_y':0.85}

    Label:
        text: 'Helping you classify cicadas...'
        font_name: 'HemiHead-BoldItalic'
        font_size: (self.parent.width*0.03+self.parent.height*0.04)/2
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {'center_x': 0.525, 'center_y': 0.74}

    Button:
        background_normal: 'classify_normal.png'
        background_down: 'classify_down.png'
        size_hint: None,None
        width: self.parent.width*0.45
        height: self.parent.height* 0.25
        pos_hint: {'center_x':0.5, 'center_y':0.51}
        on_release: root.classify_press()

    Button:
        background_normal: 'settings_normal.png'
        background_down: 'settings_down.png'
        size_hint: None,None
        width: self.parent.width*0.45
        height: self.parent.height* 0.25
        pos_hint: {'center_x':0.5, 'center_y':0.2}
        on_release: root.settings_press()





