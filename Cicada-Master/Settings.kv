<SettingsScreen>
	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    GridLayout:
        rows: 4

        Button:
            text: 'Back'
            font_name: 'RockwellCondensed-Bold'
            font_size: (self.parent.width*0.1+self.parent.height*0.1)/6
            size_hint: None,None
            width: self.parent.width*0.1
            height: self.parent.height*0.1
            on_release: root.back_press()

        Label:
            text: 'Model Settings'
            font_name: 'AgencyFB-Bold'
            font_size: (self.parent.width*0.09+self.parent.height*0.09)/2
            size_hint_y: None
            height: self.texture_size[1]+self.parent.height*0.01

        Label:
            text: 'Build and manage classification models'
            font_name: 'HemiHead-BoldItalic'
            font_size: (self.parent.width*0.03+self.parent.height*0.03)/2
            size_hint_y: None
            height: self.texture_size[1]

        GridLayout:
            rows: 2

            RelativeLayout:
                Button:
                    background_normal: 'create_normal.png'
                    background_down: 'create_down.png'
                    size_hint: None,None
                    width: self.parent.width*0.45
                    height: self.parent.height* 0.7
                    pos_hint: {'center_x':0.5, 'center_y':0.45}
                    on_release: root.create_press()

            RelativeLayout:
                Button:
                    background_normal: 'manage_normal.png'
                    background_down: 'manage_down.png'
                    size_hint: None,None
                    width: self.parent.width*0.45
                    height: self.parent.height* 0.7
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
                    on_release: root.manage_press()

