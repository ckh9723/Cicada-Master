<Classify_Screen>
    value_txt: value_txt
    file_path: file_path

	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    Button:
        text: 'Back'
        font_name: 'RockwellCondensed-Bold'
        font_size: (self.parent.width*0.1+self.parent.height*0.1)/6
        size_hint: None,None
        width: self.parent.width*0.1
        height: self.parent.height*0.1
        pos_hint: {'left':1, 'top':1}
        on_release: root.back_press()

	ABLabel:
		text: 'Classify Species'
		font_size: (self.parent.width*0.06+self.parent.height*0.15)/2
		pos_hint: {'center_x':0.5, 'center_y':0.85}
		background_color: 1,0,0,1

    Label:
		text: '[ref=a][u][color=50ebec]Which should I choose?[/color][/u][/ref]'
		markup: True
		on_ref_press: root.show_help()
		font_name: 'AgencyFB-Bold'
		italic: True
		font_size: (self.parent.width*0.03+self.parent.height*0.04)/1.8
		pos_hint: {'center_x':0.5, 'center_y':0.72}

	ABLabel:
		text: '1. Input Features'
		font_size: (self.parent.width*0.04+self.parent.height*0.06)/2
		pos_hint: {'x':-0.305,'y':0.08}

	Button:
	    text: 'Input Values'
	    font_name: 'AgencyFB-Bold'
	    font_size: root.width*0.028
	    size_hint: (.15,.1)
	    pos_hint: {'x':0.125,'y':0.38}
	    on_release: root.input_press()

    ABLabel:
        id: value_txt
		text: '[No values]'
		font_size: (self.parent.width*0.04+self.parent.height*0.06)/3
		pos_hint: {'center_x':0.2,'y':-0.175}

	ABLabel:
		text: 'OR'
		font_size: (self.parent.width*0.05+self.parent.height*0.06)/2
		pos_hint: {'center_x':0.51,'y':0.08}

	ABLabel:
		text: '2. Upload Excel File'
		font_size: (self.parent.width*0.04+self.parent.height*0.06)/2
		pos_hint: {'x':0.28,'y':0.08}

	Button:
	    text: 'Upload File'
	    font_name: 'AgencyFB-Bold'
	    font_size: root.width*0.028
	    size_hint: (.15,.1)
	    pos_hint: {'x':0.72,'y':0.38}
	    on_release: root.upload_press()

    ABLabel:
        id: file_path
		text: '[No file chosen]'
		font_size: (self.parent.width*0.04+self.parent.height*0.06)/3
		pos_hint: {'center_x':0.8,'y':-0.175}

    Label:
		text: '[ref=a][u][color=50ebec]Help[/color][/u][/ref]'
		markup: True
		on_ref_press: root.show_file_help()
		font_name: 'AgencyFB-Bold'
		italic: True
		font_size: (self.parent.width*0.03+self.parent.height*0.04)/1.8
		pos_hint: {'center_x':0.8, 'y':-0.235}

	Button:
	    text: 'CLASSIFY'
	    font_name: 'AgencyFB-Bold'
	    font_size: root.width*0.03
	    size_hint: (.15,.1)
	    pos_hint: {'center_x':0.5,'y':0.075}
	    on_release: root.classify_press()


<ABLabel@Label>
    font_name: 'AgencyFB-Bold'