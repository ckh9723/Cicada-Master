<CreateScreen>
	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    GridLayout:
        rows: 5

        Button:
            text: 'Back'
            font_name: 'RockwellCondensed-Bold'
            font_size: (self.parent.width*0.1+self.parent.height*0.1)/6
            size_hint: None,None
            width: self.parent.width*0.1
            height: self.parent.height*0.1
            on_release: root.back_press()

        Label:
            text: 'Create new model'
            font_name: 'HemiHead-BoldItalic'
            font_size: (self.parent.width*0.05+self.parent.height*0.07)/2
            size_hint_y: None
            height: self.texture_size[1]+10

        Label:
            text: ' Instructions:'
            font_name: 'HemiHead-BoldItalic'
            font_size: (self.parent.width*0.03+self.parent.height*0.065)/2
            size_hint: None,None
            width: self.texture_size[0]
            height: self.texture_size[1]+20

        GridLayout:
            rows: 4
            size_hint: None,None
            width: root.width
            height: self.minimum_height+20
            canvas.before:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: '  1) Upload an Excel file(.xlsx) containing the dataset. See \'Help\' for more info.'
                font_name: 'AgencyFB-Bold'
                font_size: (root.width*0.5+root.height*0.5)/30
                size_hint: None,None
                width: self.texture_size[0]
                height: self.texture_size[1]+35

            Label:
                text: '  2) Time taken to create the model depends on size of dataset.'
                font_name: 'AgencyFB-Bold'
                font_size: (root.width*0.5+root.height*0.5)/30
                size_hint: None,None
                width: self.texture_size[0]
                height: self.texture_size[1]+35

            Label:
                text: '  3) After model is created, fill in the details for the new model.'
                font_name: 'AgencyFB-Bold'
                font_size: (root.width*0.5+root.height*0.5)/30
                size_hint: None,None
                width: self.texture_size[0]
                height: self.texture_size[1]+35

            Label:
                text: '  4) Current-working model can be changed in the \'Manage Existing Models\' page.'
                font_name: 'AgencyFB-Bold'
                font_size: (root.width*0.5+root.height*0.5)/30
                size_hint: None,None
                width: self.texture_size[0]
                height: self.texture_size[1]+35

        RelativeLayout:
            Button:
                text: 'Upload File'
                font_name: 'AgencyFB-Bold'
                font_size: (root.width*0.1+root.height*0.1)/5
                size_hint: None,None
                width: self.texture_size[0]+30
                height: self.texture_size[1]+30
                pos_hint: {'center_x':0.5, 'top':0.9}
                on_release: root.upload_press()

            Label:
                text: '[ref=a][u][color=50ebec]Help[/color][/u][/ref]'
                font_name: 'AgencyFB-Bold'
                italic: True
                markup: True
                font_size: (root.width*0.1+root.height*0.1)/5
                pos_hint: {'center_x':0.5, 'center_y':0.3}
                on_ref_press: root.show_createHelp()


<ILabel@Label>
    font_name: 'AgencyFB-Bold'
    font_size: (root.width*0.5+root.height*0.5)/30
    size_hint: None,None
    width: self.texture_size[0]
    height: self.texture_size[1]






